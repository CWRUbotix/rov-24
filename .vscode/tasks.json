{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üèÉ‚Äç‚ôÇÔ∏è ROS All",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/easy_all.sh"
            ],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "problemMatcher": []
        },
        {
            "label": "üèÉ‚Äç‚ôÇÔ∏è ROS Quick Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/easy_build.sh"
            ],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
              }
        },
        {
            "label": "Docker Pull",
            "type": "shell",
            "command": "sudo docker pull ghcr.io/cwrurobotics/rov-24:main",
            "windows": {
                "command": "docker pull ghcr.io/cwrurobotics/rov-24:main"
            },
            "hide": true
          },
          {
            "label": "Docker Build",
            "command": "${command:remote-containers.rebuildNoCacheAndReopenInContainer}",
            "hide": true
          },
          {
            // Runs Docker Pull and then Docker Build
            // This is done because the default behavior of Docker Build
            // does not repull the docker image from github.
            "label": "Docker Rebuild",
            "dependsOrder": "sequence",
            "dependsOn": ["Docker Pull", "Docker Build"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
          },
          {
            "label": "Setup ROS Environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/ros2_install.sh"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/install_dependencies.sh"
            ],
            "problemMatcher": []
        },
        {
            "label": "Setup ROV Environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/rov_setup.sh"
            ],
            "problemMatcher": []
        },
        {
            "label": "First Time Setup",
            "dependsOrder": "sequence",
            "dependsOn": ["Setup ROS Environment", "Install Dependencies", "Setup ROV Environment"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
          },
          {
            "label": "Setup Pi Environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/.vscode/pi_setup.sh"
            ],
            "problemMatcher": []
        },
    ]
