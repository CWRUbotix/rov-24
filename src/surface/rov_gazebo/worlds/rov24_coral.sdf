<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="rov24_coral">

    <!-- Base Gazebo plugins -->
    <plugin
        filename="ign-gazebo-physics-system"
        name="ign::gazebo::systems::Physics">
    </plugin>
    <plugin
        filename="ign-gazebo-user-commands-system"
        name="ign::gazebo::systems::UserCommands">
    </plugin>
    <plugin
        filename="ign-gazebo-scene-broadcaster-system"
        name="ign::gazebo::systems::SceneBroadcaster">
    </plugin>

    <!-- IMU plugin manages all IMU sensors -->
    <plugin filename="libign-gazebo-imu-system.so"
            name="ign::gazebo::systems::Imu">
    </plugin>

    <plugin filename="ign-gazebo-sensors-system"
            name="ign::gazebo::systems::Sensors">
    </plugin>

    <!-- Buoyancy plugin manages buoyancy for all models -->
    <plugin
        filename="ign-gazebo-buoyancy-system"
        name="ign::gazebo::systems::Buoyancy">
      <!-- Fluid density is 1 (air) above 0 and 1000 (water) below 0 -->
      <graded_buoyancy>
        <default_density>1000</default_density>
        <density_change>
          <above_depth>0</above_depth>
          <density>1</density>
        </density_change>
      </graded_buoyancy>
      <!-- Enable by model name -->
      <enable>rov24</enable>
    </plugin>

    <include>
      <uri>https://fuel.gazebosim.org/1.0/OpenRobotics/models/Sun</uri>
    </include>

    <include>
      <uri>model://rov24</uri>
      <pose>-2 0 0 0 0 0</pose>
    </include>

    <include>
      <uri>model://pool</uri>
      <pose>0 0 -4 0 0 0</pose>
    </include>

    <include>
      <uri>model://coral_recovery_area</uri>
      <pose>0 0 -4 0 0 0</pose>
    </include>

  </world>
</sdf>
